<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="132dp"
    android:layout_height="100dp"
    app:cardCornerRadius="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginHorizontal="7dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="132dp"
    android:layout_height="100dp"
    >

    <ImageView
        android:id="@+id/ivAlbum"
        android:src="@drawable/vageta"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <View
        android:id="@+id/viewTranslucent"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/trans_black"
        android:layout_height="40dp"/>

    <TextView
        android:id="@+id/tvAlbumTitle"
        android:text="Naruto Shippuden"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:ellipsize="end"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintTop_toTopOf="@id/viewTranslucent"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvArtistTitle"
        android:text="Naruto Shippuden"
        android:maxLines="1"
        android:textColor="@color/white"
        android:visibility="gone"
        android:textSize="12sp"
        android:ellipsize="end"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintTop_toTopOf="@id/viewTranslucent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvAlbumArtist"
        android:text="- Shekhar Shinde"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintTop_toBottomOf="@id/tvAlbumTitle"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>